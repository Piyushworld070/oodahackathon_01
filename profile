    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Profile photo upload functionality
            const uploadBtn = document.getElementById('uploadBtn');
            const photoInput = document.getElementById('photoInput');
            const profilePhoto = document.getElementById('profilePhoto');
            
            uploadBtn.addEventListener('click', function() {
                photoInput.click();
            });
            
            photoInput.addEventListener('change', function(e) {
                if (e.target.files.length) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        profilePhoto.src = event.target.result;
                    };
                    reader.readAsDataURL(e.target.files[0]);
                }
            });
            
            // Add degree functionality
            const addDegreeBtn = document.getElementById('addDegreeBtn');
            const degreeContainer = document.getElementById('degreeContainer');
            
            addDegreeBtn.addEventListener('click', function() {
                const newDegree = document.createElement('div');
                newDegree.className = 'degree-entry';
                newDegree.innerHTML = `
                    <div class="form-row">
                        <div class="form-group">
                            <label>Degree*</label>
                            <input type="text" name="degree" required>
                        </div>
                        <div class="form-group">
                            <label>Marks/CGPA*</label>
                            <input type="text" name="marks" required>
                        </div>
                    </div>
                `;
                degreeContainer.appendChild(newDegree);
            });
            
            // Skills management functionality
            const addSkillBtn = document.getElementById('addSkillBtn');
            const newSkillInput = document.getElementById('newSkill');
            const skillsList = document.getElementById('skillsList');
            const skills = [];
            
            addSkillBtn.addEventListener('click', function() {
                const skill = newSkillInput.value.trim();
                if (skill && !skills.includes(skill)) {
                    skills.push(skill);
                    updateSkillsDisplay();
                    newSkillInput.value = '';
                }
            });
            
            function updateSkillsDisplay() {
                skillsList.innerHTML = '';
                skills.forEach((skill, index) => {
                    const skillTag = document.createElement('div');
                    skillTag.className = 'skill-tag';
                    skillTag.innerHTML = `
                        ${skill}
                        <span class="remove-skill" data-index="${index}">×</span>
                    `;
                    skillsList.appendChild(skillTag);
                });
                
                // Add event listeners to remove buttons
                document.querySelectorAll('.remove-skill').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const index = parseInt(this.getAttribute('data-index'));
                        skills.splice(index, 1);
                        updateSkillsDisplay();
                    });
                });
            }
            
            // Form submission
            const profileForm = document.getElementById('profileForm');
            profileForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Collect form data
                const formData = {
                    personalInfo: {
                        fullName: document.getElementById('fullName').value,
                        contactNo: document.getElementById('contactNo').value,
                        email: document.getElementById('email').value,
                        dob: document.getElementById('dob').value,
                        address: document.getElementById('address').value,
                        profilePhoto: profilePhoto.src
                    },
                    education: [],
                    skills: [...skills]
                };
                
                // Collect degree information
                document.querySelectorAll('.degree-entry').forEach(entry => {
                    const inputs = entry.querySelectorAll('input');
                    formData.education.push({
                        degree: inputs[0].value,
                        marks: inputs[1].value
                    });
                });
                
                // Here you would typically send the data to a server
                console.log('Form submitted:', formData);
                alert('Profile submitted successfully!');
                
                // Reset form if needed
                // profileForm.reset();
            });
        });
    </script>
</body>
</html>

